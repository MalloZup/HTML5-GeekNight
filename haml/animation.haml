!!! 5

%html
  %head
    %meta{:charset => "utf-8"}
    %title Transitions
    %link{:href => "css/common.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/animation.css", :rel => "stylesheet", :type => "text/css"}
  %body
    %header
      %hgroup
        %h1 Animations
        %h2 Declared Animations
    %section
      %section
        %div.outer
          %div.inner
      %aside
        %ul
          %li animation-name
          %li animation-duration
          %li animation-iteration-count
          %li @keyframes
          %li animation-timing-function
          %li AnimationEnd
    %footer
      %nav
        %h1 Links
        %ul
          %li
            %a{:href => "http://dev.w3.org/html5/"} Spec
    :javascript
      var div = document.querySelector("div.outer div.inner");
      div.addEventListener('click', function() {
        this.classList.toggle("selected");
      }, false);
      div.addEventListener('webkitAnimationEnd', function() {
        alert("Animation Ended!");
      }, false);
      